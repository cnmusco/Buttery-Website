<html>
<head>
    <%=stylesheet_link_tag("style")%>
	<%=stylesheet_link_tag("cnm_buttons")%>

    <%=javascript_include_tag :defaults, "application1"%>
    <%= csrf_meta_tag %>
    
    <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-28607691-1']);
          _gaq.push(['_setDomainName', 'piersonbuttery.com']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();
    </script>

</head>

<div id="all">
<div id="head-container" class="top_rounded_corners">
	<div id="header">
            <span id="headline">
                    Pierson Buttery
            </span><br/>
            <div id="log_in_display">
            </div>
	</div>
</div>

<div id="navigation-container" class="bottom_rounded_corners">
    <div id="navigation">
                <ul id="nav_list">
                       	<li id="home_li"><button id="home" class="nav_button">Home</button></li>
						
                        <li id="worker_li" <%if  not session[:current_user] or session[:current_user].worker == 0%>
							style='display:none'
						<%end%>
><button id="worker_view" class="nav_button">Worker View</button></li>
	
                        <li id="login_li" <%if session[:current_user]%>style='display:none'<%end%>
	><button id="log_in" class="nav_button">Log In</button></li>
                            <div class="login" id="log_in_menu">
                                <form id="login_form">
                                <table>
                                    <tr><td>username: <td/><td><input type="text" id="username" /></td></tr>
                                    <tr><td>password: <td/><td><input type="password" id="pwd" /></td>
                                </table>
 								<input type="submit" value="Log In" id="login_button" class="clean-gray">
								<button id="forgot_pwd" class="clean-gray">Forgot Password</button><br/>
								<button id="forgot_username" class="clean-gray">Forgot Username</button>
                                </form>
                                <div class="invalid_login" id="invalid_login">Invalid Username/Password</div>
                                <div class="invalid_login" id="invalid_login5">Account Not Activated.</br>Activation Email Has Been Resent</div>
                                <div class="invalid_login" id="invalid_login7">This Account Has Been Temporarily Deactivated.</br>Please Speak With Mike ASAP</div>
                            </div>
                            
							<div class="login" id="send_username">
                                <table>
                                    <tr><td>Enter email: <td/><td><input type="text" id="username_email" /></td></tr>                     
                                </table>
 								<button id="send_username_button" class="clean-gray">Send username to email</button>
                            </div>
                        <li id="signup_li" <%if session[:current_user]%>style='display:none'<%end%>><button id="sign_up_butt" class="nav_button">Sign Up</button></li>
                            <div class="login" id="sign_up_menu">
                                <form id='sign_up_form'>
                                	<table>
	                                    <tr><td>username: <td/><td><input type="text" id="username1" /></td></tr>
	                                    <tr><td>email address: <td/><td><input type="text" id="email1" /></td></tr>
	                                    <tr><td>password: <td/><td><input type="password" id="pwd0" /></td></tr>
	                                    <tr><td>retype password: <td/><td><input type="password" id="pwd1" /></td></tr>
										<tr><td><input type="submit" value="Sign Up" id="sign_up_button" class="clean-gray"></td></tr>
	                                </table>
                                </form>
                                <div>If You Do Not Receive An Email, Check</div><div>Your Spam Folder.  Remove The</div><div>Address From Your Spam Filter.</div></br>
                                <div class="invalid_login" id="invalid_login1">Invalid Entry</div>
                                <div class="invalid_login" id="invalid_login2">Must Use Yale Email Address and Matching Passwords</div>
                                <div class="invalid_login" id="invalid_login3">This Username is Unavailable</div>
                                <div class="invalid_login" id="invalid_login4">You Have Entered an Invalid Yale Email </br>Address For A Student of Pierson</div>
                                <div class="invalid_login" id="invalid_login6">This Email Address Already has an Active Account</div>
                            </div>
							<li id="about_li"><button id="about" class="nav_button">About</button></li>
							<li id='logged_out' <%if session[:current_user]%>style='display:none'<%end%>>
								Log In To Place An Order
							</li>
							<span id='logged_in' <%if !session[:current_user]%>style='display:none'<%end%>>
								<li class="welcome_li ">
									<span id='welcome-message'>
			                    	<%if session[:current_user]%>
										<%='Welcome, ' + session[:current_user].name.split.map{|x| x.capitalize}.join(" ")%>
									<%end%>
									</span>
								</li>
							</span>
                </ul>

				<ul id="account_logout_buttons" <%if !session[:current_user]%>style='display:none'<%end%>>
					<li class="small_button_li ">
						<span id="account_info" class="nav_button_small">Account Info</span>
					</li>
					<li class="small_button_li ">
	            		<span id="log_out" class="nav_button_small">Log Out</span>
					</li>
				</ul>
        </div>
</div>


<div id="content-container">
	<div id="content-container2">
			<div id="content">
                                <%=yield%>
			</div>
	</div>
</div>
	<div id="footer-container" class="bottom_rounded_corners top_rounded_corners">
		<div id="footer">
			<div id='footer_text'>Created by Mike Levine and Cameron Musco, 2011</div>
		</div>
	</div>
</div>
</div>
</html>