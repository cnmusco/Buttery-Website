<h1>Listing users</h1>

<table>
  <tr>
    <th>Id</th>
    <th>User name</th>
    <th>Email address</th>
    <th>Pwd</th>
    <th>Banned</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.user_name %></td>
    <td><%= user.email_address %></td>
    <td><%= user.pwd %></td>
    <td><%= user.banned %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

