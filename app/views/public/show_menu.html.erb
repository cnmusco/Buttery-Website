<h3>See What's In Stock and Place an Order</h3>
<% clas="" %>
<% @classes.each do |cla| %> 
    <% if clas!=cla.class_of_food %>
        <% clas=cla.class_of_food %>
        <div class="classes">
            <h3><%= clas %></h3>
            <% @parents.each do |parent| %>
                <% if parent.class_of_food==clas %>
                    <div class="item_names_public" id=<%= parent.id %>> <%= parent.parent_name %>
                    <%= parent.rgb %></div>
                    <% if parent.rgb!=0 %>
                        <div class="hidden_ings_pub" id=pub_ings_<%= parent.id %>>
                            <% @makeups.each do |mkup| %>
                                <% if mkup.food==parent.id %>
                                    <%= @ings[mkup.ingredient].ingredient_name%>
                                    <select id="ing_multiplier_<%= parent.id %>">
                                    <% if @ings[mkup.ingredient].amount_in_stock!=0 %>
                                            <% if mkup.vital==0 %>
                                                <option value=0> 0 </option>
                                            <%end%>
                                            <option value=1> 1</option>
                                            <option value=2> 2</option>
                                            <option value=3> 3</option>
                                    <%else%>
                                        <option value=1> Out Of Stock </option>
                                    <%end%>
                                    </select>
                                <%end%>
                            <%end%>
                        </div>
                    <%end%>
                <%end%>
            <%end%>
        </div>
    <% end %>
<% end%>
