
<div>
    <table style="float:left">
        <% x=(@ingredients.length/2) %>
        <% if (@ingredients.length/2)*2==@ingredients.length %>
            <% x=(@ingredients.length/2)-1 %>
        <%end%>
        <% (0..x).each do |i| %>
            <%ing=@ingredients[i]%>
            <tr> <td> <%= ing.ingredient_name %> </td><td>&nbsp</td>
            <td> <div id=ais<%=ing.id%>> <%= ing.amount_in_stock %> </div> </td>
            <td> <%= ing.unit_of_stock %> </td>
            <td>&nbsp</td>
            <td><button class=add_item id=<%=ing.id%>> + </button> </td>
            <td><button class=sub_item id=<%=ing.id%>> - </button> </td>
            <td><button class=empty_item id=<%=ing.id%>> Out Of Stock </button> </td></tr>
        <%end%>
    </table>
    <table style="float:left; margin:8px">
        <% ((x+1)..@ingredients.length).each do |i| %>
            <%ing=@ingredients[i]%>
            <%if ing%>
                <tr> <td> <%= ing.ingredient_name %> </td><td>&nbsp</td>
                <td> <div id=ais<%=ing.id%>> <%= ing.amount_in_stock %> </div> </td>
                <td> <%= ing.unit_of_stock %> </td>
                <td>&nbsp</td>
                <td><button class=add_item id=<%=ing.id%>> + </button> </td>
                <td><button class=sub_item id=<%=ing.id%>> - </button> </td>
                <td><button class=empty_item id=<%=ing.id%>> Out Of Stock </button> </td></tr>
            <%end%>
        <%end%>
    </table>
</div>