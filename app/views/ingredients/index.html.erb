<h1>Listing ingredients</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Ingredient name</th>
    <th>Amount in stock</th>
    <th>Unit of stock</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.id %></td>
    <td><%= ingredient.ingredient_name %></td>
    <td><%= ingredient.amount_in_stock %></td>
    <td><%= ingredient.unit_of_stock %></td>
    <td><%= link_to 'Show', ingredient %></td>
    <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Destroy', ingredient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

